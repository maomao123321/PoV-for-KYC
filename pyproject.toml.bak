[tool.poetry]
package-mode = false

[build-system]
requires = ["hatchling"]
build-backend = "hatchling.build"

[project]
name = "pov-kyc"
version = "0.1.0"
description = "Fireworks-based KYC PoV pipeline (passport/driver license OCR with validation)"
readme = "README.md"
requires-python = ">=3.10"
dependencies = [
  "pydantic>=2.7,<3",
  "pydantic-settings>=2.2,<3",
  "httpx>=0.27,<0.28",
  "opencv-python-headless>=4.10,<5",
  "Pillow>=10.3,<11",
  "numpy>=1.26,<3",
  "streamlit>=1.30,<2",
]

[project.scripts]
kyc-pov = "src.cli:cli"

[tool.hatch.build.targets.wheel]
packages = ["src"]

